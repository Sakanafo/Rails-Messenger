= form_with url: messages_path(room_id: @room&.id), model: @new_message do |f|
  = f.hidden_field :room_id, value: @room&.id
  = f.text_area :body, required: true, minlength: 1, placeholder: 'Write a message...', class: "form-control mr-sm-3"
  button.btn.btn-outline-success.my-2.my-sm-2(type="submit") Send